<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#004966"
    >



    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="5dp"
        android:shadowColor="#aaece3"
        android:shadowDx="-2"
        android:shadowDy="-2"
        android:shadowRadius="5.0"
        android:text="Main Menu"
        android:textColor="#19d8a7"
        android:textSize="45sp" />

    <Button
        android:id="@+id/schedulebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="SMS Scheduler Setting"
        android:padding="20dp"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:onClick="SchedulebuttonClicked"/>

    <Button
        android:id="@+id/autobtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:padding="20dp"
        android:text="Auto Response Setting"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Button
        android:id="@+id/historybtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Scheduled history"
        android:padding="35dp"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

</LinearLayout>
